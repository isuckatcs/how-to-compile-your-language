// RUN: compiler %s -ast-dump 2>&1 | filecheck %s
struct Color {
    r: number,
    g: number,
    b: number,
}

struct Empty {}

fn main(): void {
    let empty = Empty {};
    // CHECK: DeclStmt:
    // CHECK-NEXT:   VarDecl: empty
    // CHECK-NEXT:     StructInstantiationExpr
    // CHECK-NEXT:       DeclRefExpr: Empty

    let withTrailingComma = Color {
        r: 0, 
        g: 1, 
        b: 2,
    };
    // CHECK: DeclStmt:
    // CHECK-NEXT:   VarDecl: withTrailingComma
    // CHECK-NEXT:     StructInstantiationExpr
    // CHECK-NEXT:       DeclRefExpr: Color
    // CHECK-NEXT:       FieldInitStmt: r
    // CHECK-NEXT:         NumberLiteral: '0'
    // CHECK-NEXT:       FieldInitStmt: g
    // CHECK-NEXT:         NumberLiteral: '1'
    // CHECK-NEXT:       FieldInitStmt: b
    // CHECK-NEXT:         NumberLiteral: '2'

    let withoutTrailingComma = Color {r: 0, g: 1, b: 2};
    // CHECK: DeclStmt:
    // CHECK-NEXT:   VarDecl: withoutTrailingComma
    // CHECK-NEXT:     StructInstantiationExpr
    // CHECK-NEXT:       DeclRefExpr: Color
    // CHECK-NEXT:       FieldInitStmt: r
    // CHECK-NEXT:         NumberLiteral: '0'
    // CHECK-NEXT:       FieldInitStmt: g
    // CHECK-NEXT:         NumberLiteral: '1'
    // CHECK-NEXT:       FieldInitStmt: b
    // CHECK-NEXT:         NumberLiteral: '2'
}
